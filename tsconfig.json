{
  "target": "es5",
  "lib": ["dom", "dom.iterable", "esnext"],
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@data/*": ["src/data/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@scripts/*": ["src/scripts/*"]
    },
    "types": ["vite/client","html-to-text"]
  },

  "include": ["**/*.ts", "**/*.astro"],
  "exclude": ["node_modules"]
}
