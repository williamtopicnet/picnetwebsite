<form action="https://formspree.io/f/mdovndry"
        method="POST"
        class="contact__form">
  <div class="contact__form__item">
    <label for="contactName">Name*</label>
    <input required placeholder="Name" name="name" id="contactName" />
  </div>

  <div class="contact__form__item">
    <label for="contactPhone">Phone*</label>
    <input required placeholder="Phone" name="phone" id="contactPhone" />
  </div>

  <div class="contact__form__item">
    <label for="contactEmail">Email*</label>
    <input required placeholder="Email" type="email" name="email" id="contactEmail" />
  </div>

  <div class="contact__form__item">
    <label for="contactCompany">Company*</label>
    <input required placeholder="Company" name="company" id="contactCompany" />
  </div>

  <div class="contact__form__item">
    <label for="contactMessage">Your message*</label>
    <textarea
      cols="40"
      rows="10"
      maxlength="500"
      minlength="20"
      class="span-2"
      placeholder="Message"
      name="message"
      id="contactMessage"></textarea>
  </div>

  <button type="submit">Send Message</button>
</form>

<style lang="scss">
  @use '@styles/scss/base-var.scss' as bs;

  .contact__form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    color: var(--color-white);
    gap: var(--base-3x);

    // Inputs
    &__item {
      display: grid;
      gap: var(--base);

      &:nth-last-child(2) {
        grid-column: 1/3;
      }

      label {
        text-transform: uppercase;
        font-size: var(--text-sm);
      }

      input,
      textarea {
        background-color: rgba(255, 255, 255, 0.3);
        border-color: transparent;
        color: inherit;
        border-radius: var(--base-3x);
        padding: var(--base-2x);

        &::placeholder {
          color: rgba(255, 255, 255, 0.5);
        }
      }
    }

    button {
      background-color: var(--color-text-info);
      color: var(--color-white);
      border-radius: var(--base-3x);
      padding: var(--base-2x);

      grid-column: 2/3;
      transition: filter var(--base-transition);

      &:hover {
        filter: saturate(0.5);
      }
    }
  }

  @media only screen and (max-width: bs.$screen-lg) {
    .contact__form {
      grid-template-columns: 1fr;

      &__item {
        &:nth-last-child(2) {
          grid-column: auto;
        }
      }

      button {
        grid-column: auto;
      }
    }
  }
</style>
