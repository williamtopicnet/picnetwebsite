<section id="contact" class="contact-area">
  <div class="container">
    <main>
      <!-- FORM -->
      <form class="contact__form">
        <div class="contact__form__item">
          <label for="contactName">Name*</label>
          <input required placeholder="Name" name="name" id="contactName" />
        </div>

        <div class="contact__form__item">
          <label for="contactPhone">Phone*</label>
          <input required placeholder="Phone" name="phone" id="contactPhone" />
        </div>

        <div class="contact__form__item">
          <label for="contactEmail">Email*</label>
          <input required placeholder="Email" name="email" id="contactEmail" />
        </div>

        <div class="contact__form__item">
          <label for="contactCompany">Company*</label>
          <input
            required
            placeholder="Company"
            name="company"
            id="contactCompany"
          />
        </div>

        <div class="contact__form__item">
          <label for="contactMessage">Your message*</label>
          <textarea
            cols="40"
            rows="10"
            maxlength="500"
            minlength="20"
            class="span-2"
            placeholder="Message"
            name="message"
            id="contactMessage"></textarea>
        </div>

        <button type="button">Send Message</button>
      </form>

      <!-- INFO -->
      <div class="contact__info">
        <h1 class="contact__info__title">HOW CAN WE HELP YOU?</h1>

        <p class="contact__info__emphasize"><span>Contact Us</span> Today</p>

        <a
          class="contact__info__address"
          href="https://www.google.com/maps/place/PicNet+-+IT+Services/@-33.8247437,151.1968911,17z/data=!3m2!4b1!5s0x6b12aec2aec8f117:0x3f5f1224047403d0!4m12!1m6!3m5!1s0x6b12aedc4fa26751:0xb660fcf84162fae8!2sPicNet+-+IT+Services!8m2!3d-33.8247482!4d151.1990798!3m4!1s0x6b12aedc4fa26751:0xb660fcf84162fae8!8m2!3d-33.8247482!4d151.1990798"
          target="_blank"
        >
          <address>
            <span>LEVEL 9 SUITE 902 28 CLARKE STREET</span>
            <br />
            <span>CROWS NEST, NSW 2065</span>
            <br />
            <span>AUSTRALIA</span>
          </address>
          <i class="fa-solid fa-location-dot"></i>
        </a>

        <a class="contact__info__phone" href="tel:+61284377900">
          <span>(+61) 2 8437 7900</span>
          <i class="fa-solid fa-phone"></i>
        </a>

        <a class="contact__info__email" href="mailto:picnet@picnet.com.au">
          <span>picnet@picnet.com.au</span>
          <i class="fa-solid fa-envelope"></i>
        </a>

        <a
          href="https://www.linkedin.com/company/picnet-pty-ltd/"
          target="_blank"
          class="linkeldn"
        >
          <i class="fa-brands fa-linkedin-in fa-xl"></i>
        </a>
      </div>
    </main>
  </div>
</section>

<style lang="scss">
  @import "@styles/scss/base-var.scss";
  @import "@styles/scss/colors.scss";
  @import "@styles/scss/typography.scss";

  .contact-area {
    padding-block: $base * 12;
    background-image: url("/images/home/bg-contact.jpeg");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  main {
    display: grid;
    grid-template-columns: 3fr 1fr;
    gap: $base * 8;
    padding: 0;
  }

  .contact__form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    color: $color-white;
    gap: $base * 3;

    // Inputs
    &__item {
      display: grid;
      gap: $base;

      &:nth-last-child(2) {
        grid-column: 1/3;
      }

      label {
        text-transform: uppercase;
        font-size: $text-sm;
      }

      input,
      textarea {
        background-color: rgba(255, 255, 255, 0.3);
        border-color: transparent;
        color: inherit;
        border-radius: $base * 3;
        padding: $base * 2;

        &::placeholder {
          color: rgba($color-white, 0.5);
        }
      }
    }

    button {
      background-color: $color-text-info;
      color: $color-white;
      border-radius: $base * 3;
      padding: $base * 2;

      grid-column: 2/3;
      transition: filter $base-transition;

      &:hover {
        filter: saturate(0.5);
      }
    }
  }

  .contact__info {
    background-color: $color-bg-1;
    color: $color-white;
    padding: $base * 4 $base * 2;
    border-radius: $base * 0.5;
    height: fit-content;

    display: flex;
    flex-direction: column;
    gap: $base * 2;
    text-align: right;

    h1 {
      font-size: $text-sm;
      font-weight: 400;
    }

    &__emphasize {
      font-size: $text-lg;

      span {
        text-decoration: underline;
      }
    }

    a {
      font-size: $text-sm;
      font-weight: 600;
      color: $color-white;

      display: grid;
      grid-template-columns: 1fr min-content;
      gap: 1ch;

      transition: color $base-transition;

      &.linkeldn {
        display: inline;
      }

      i {
        padding-top: 0.2em;
      }

      &:hover {
        color: $color-text-info;
      }
    }

    &__address {
      margin-top: $base * 3;
      text-transform: uppercase;

      address {
        font-style: normal;
      }
    }
  }

  @media only screen and (max-width: 780px) {
    main {
      grid-template-columns: 1fr;
      padding: $base * 4;
    }

    .contact__form {
      grid-template-columns: 1fr;

      &__item {
        &:nth-last-child(2) {
          grid-column: auto;
        }
      }

      button {
        grid-column: auto;
      }
    }
    .contact__info {
      text-align: left;

      a {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
      }
    }
  }
</style>
