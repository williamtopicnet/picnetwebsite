---
import "../styles/normalize.css";

import NavHeader from "../components/NavHeader.astro";
import ContactUs from "../components/ContactUs.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <!-- Font Awesome -->
    <link href="/font/fontawesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="/font/fontawesome/css/brands.min.css" rel="stylesheet" />
    <link href="/font/fontawesome/css/solid.min.css" rel="stylesheet" />

    <meta name="generator" content={Astro.generator} /><title>{title}</title>
  </head>

  <body>
    <NavHeader />
    <main class="page-content">
      <slot />
    </main>

    <ContactUs />
    <Footer />
  </body>
</html>
<style lang="scss" is:global>
  @import "global";

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: $font;
    font-size: 16px; // Base
  }

  body {
    background-color: $color-bg-light;
    line-height: 1.5;
  }

  .container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    position: relative;
  }

  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }

  a {
    text-decoration: none;
  }

  .section__intro {
    text-align: center;

    .section__title {
      color: $color-text-title;
      font-size: $text-2xl;
      font-weight: 600;
    }

    .section__subtitle {
      color: $color-text-info;
      font-size: $text-sm;
    }
  }

  button {
    font-size: 100%;
    font-family: inherit;
    border: 0;
    cursor: pointer;
  }

  ul,
  ol {
    list-style: none;
  }
</style>
