---
export interface Props {
	tabs: string[];
}
const { tabs } = Astro.props;
---
<script is:inline>  
  function tab_open(e) {    
    const index = Array.from(e.parentNode.childNodes).
        filter(c => c.nodeName === e.nodeName).
        indexOf(e);    
    const contents = Array.from(document.getElementsByClassName('tab-content'));
    contents.forEach((tab, idx) => {
      tab.style.display = idx === index ? 'block' : 'none';
    });    
    return false;
  }  
</script>
<div class="tabs">
  {tabs.map((tab) => <button class="tab" onclick={`tab_open(this)`}>{{tab}}</button>)}
  <div class="tab-content" style="display:block">
    <slot />
  </div>
</div>      

<style lang="scss">
  @import '../../../layouts/global.scss'; 
  
  button {
    font-size: $fs-med;
  }
</style>