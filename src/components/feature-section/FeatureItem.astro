---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="feature__item">
  <div class="feature__item__icon">
    <i class={`${icon} fa-2xl`}></i>
  </div>
  <strong class="feature__item__title">{title}</strong>
  <p class="feature__item__description">{description}</p>
</div>

<style lang="scss">
  @use '@styles/scss/base-var.scss' as bv;

  .feature__item {
    text-align: start;
    color: var(--color-text-primary);

    &__title {
      font-weight: 500;
      font-size: var(--text-base);
      margin-top: var(--base-2x);
      display: inline-block;
    }

    &__description {
      font-weight: 300;
      font-size: var(--text-base);
      margin-top: var(--base);
    }

    &__icon {
      color: var(--color-text-primary);
    }
  }

  @media only screen and (max-width: bv.$screen-lg) {
    .feature__item {
      text-align: center;
    }
  }
</style>
