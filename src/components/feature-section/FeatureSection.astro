---
interface Props {
  title: string;
  subtitle: string;
  data: {
    title: string;
    description: string;
    icon: string;
  }[];
}

import FeatureItem from './FeatureItem.astro';

const { title, subtitle, data } = Astro.props;
---

<section id="features" class="section features-area">
  <div class="container">
    <header class="section__header">
      <h3 class="section__subtitle">{subtitle}</h3>
      <h1 class="section__title">{title}</h1>
    </header>

    <main>
      {data.map(({ title, description, icon }) => <FeatureItem title={title} description={description} icon={icon} />)}
    </main>
  </div>
</section>

<style lang="scss">
  @use '@styles/scss/base-var.scss' as bv;

  .features-area {
    background-color: var(--color-white);

    main {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      margin-top: var(--base-8x);
      gap: var(--base-8x);
    }
  }

  @media only screen and (max-width: bv.$screen-lg) {
    .features-area {
      padding-inline: var(--base-4x);
      main {
        grid-template-columns: 1fr;
      }
    }
  }
</style>
