---
const {dialogid} = Astro.props;
---
<style lang="scss">
dialog {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  &::backdrop {
    position: fixed;
    top: 0px;
    right: 0px;
    bottom: 0px;
    left: 0px;
    background: rgba(255, 0, 0, 0.1);
  }
}

.close button {
	background: none;
	color: inherit;
	border: none;
	padding: 0;
	font: inherit;
	cursor: pointer;
	outline: inherit;
  float: right;
}
</style>

<dialog id={dialogid}>
  <form method="dialog" class="close"><button>X</button></form>
  <slot />  
</dialog>