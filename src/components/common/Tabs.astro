---
export interface Props {
  tabs: string[];
}
const { tabs } = Astro.props;
---

<div class="tabs">
  <div class="tabs__action">
    {
      tabs.map((tab, index) => (
        <button class="tabs__button" data-tab-index={index}>
          {tab}
        </button>
      ))
    }
  </div>

  <div class="tabs__content">
    <slot />
  </div>
</div>

<style lang="scss">
  .tabs__action {
    border-top-left-radius: var(--base-radius);
    border-top-right-radius: var(--base-radius);
    display: flex;
    flex-wrap: wrap;
    gap: var(--base);

    .tabs__button {
      min-width: 0;
      border-radius: var(--base);
      transition: background-color 0.2s, color 0.2s;
      transition-timing-function: var(--base-animation-timing);

      &.active {
        background-color: var(--color-text-info);
        color: var(--color-white);
      }
    }
  }

  button {
    border: 0;
    background-color: var(--color-white);
    padding: var(--base-2x);
    cursor: pointer;
    text-align: left;

    &:hover {
      color: var(--color-white);
      background-color: var(--color-text-info);
    }
  }

  .tabs__content {
    margin-top: var(--base-2x);
    background-color: var(--color-white);
    border-radius: var(--base-radius);
  }
</style>
