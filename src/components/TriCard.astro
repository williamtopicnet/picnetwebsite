---
export interface Props {
	title: string;
	subtitle: string;
	icon: string;
  iconfont: string;
}
const { title, subtitle, icon, iconfont } = Astro.props;
---
<div class="container">
  <div class="icon">        
      <i class=`scape` style=`font-family: ${iconfont}`>{icon}</i>
  </div>
  <div class="content">
    <h1>{title}</h1>
    <div>{subtitle}</div>	
  </div>	
</div>		
<style lang="scss">
  @import '../layouts/global.scss'; 

  .container {
    background-color: $color-fg-light;    
    border-radius: 1rem; 
    text-transform: uppercase;
    color: $color-fg-darker;
    padding: 1rem 0;
  }

  h1 {
    font-size: $fs-sub-heading; 
  }

  .content {
    h3 { opacity: 0.6; }
  }  

  i {
    font-size: 3rem;
    font-style: normal;
  }  
</style>
