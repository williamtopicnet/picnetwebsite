---
// Static Data
import { data as informationData } from '@data/software-engineering/information.json';
import { data as featureData } from '@data/software-engineering/features.json';
import { data as stepsData } from '@data/software-engineering/steps.json';
import { data as caseStudiesData } from '@data/software-engineering/case-studies.json';

// Components
import FeatureSection from '@components/feature-section/FeatureSection.astro';
import InfoSection from '@components/info-section/InfoSection.astro';
import ServicesHero from '@components/common/ServicesHero.astro';
import StepsSection from '@components/steps-section/StepsSection.astro';
import ServiceCaseStudySection from '@components/common/ServiceCaseStudySection.astro';

import Layout from '@layouts/Layout.astro';

// Specific section components
import Platforms from './software-engineering-sections/Platforms.astro';
---

<script>
  import { initTab } from '@scripts/tab';

  document.addEventListener('DOMContentLoaded', () => {
    if (typeof initTab === 'function') {
      initTab('case-studies');
    }
  });
</script>

<Layout title="PicNet - Software Development Services">
  <ServicesHero
    title="Software Development Services"
    subtitle="100% Australian Development (No offshoring). Everything developed in Sydney with absolute respect for your IP and sensitive data. With a commitment to quality, performance, and beauty."
    ctaText="Contact Us Today"
    ctaUrl="/software-engineering/#contact"
    heroImage="/images/software-engineering/softwareengineering_hero.webp"
  />

  <FeatureSection
    title="When your company needs"
    subtitle="build a quality software stack that can scale with you"
    data={featureData}
  />

  <InfoSection
    title="High Performance Custom Software"
    subtitle="local development of web, mobile and distributed systems in your industry"
    image="/images/software-engineering/softwareengineering_maintenance.webp"
    data={informationData}
  />

  <StepsSection title="Types of Systems" subtitle="DESIGN, DEVELOP, DEPLOY" data={stepsData} />

  <Platforms />

  <ServiceCaseStudySection
    title="Some of our Case Studies"
    subtitle="OUR COMMITMENT TO QUALITY"
    data={caseStudiesData}
    id="case-studies"
  />
</Layout>
