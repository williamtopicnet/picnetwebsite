---
import Layout from '../layouts/Layout.astro';

import Hero from './home-sections/Hero.astro';
import ServicesCards from './home-sections/ServicesCards.astro';
import ServicesCarousel from './home-sections/ServicesCarousel.astro';
import AboutUs from './home-sections/AboutUs.astro';
import Management from './home-sections/Management.astro';
import CustomerLogos from './home-sections/CustomerLogos.astro';
import CustomerTestimonialsCarousel from './home-sections/CustomerTestimonialsCarousel.astro';
import Partners from './home-sections/Partners.astro';
import ContactUs from './home-sections/ContactUs.astro';
---

<Layout title="PicNet - Software Development, IT Support, Cloud Management Services">
  <main>
    <Hero />
    <ServicesCards />    
    <ServicesCarousel />    
    <Management />
    <AboutUs />
    <CustomerLogos />
    <CustomerTestimonialsCarousel />
    <Partners />
    <ContactUs />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1.5rem;
  }
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }  
</style>
