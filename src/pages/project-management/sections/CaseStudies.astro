<script is:inline>  
  function tab_open(e) {    
    const index = Array.from(e.parentNode.childNodes).
        filter(c => c.nodeName === e.nodeName).
        indexOf(e);    
    const contents = Array.from(document.getElementsByClassName('tab-content'));
    contents.forEach((tab, idx) => {
      tab.style.display = idx === index ? 'block' : 'none';
    });    
    return false;
  }  
</script>
