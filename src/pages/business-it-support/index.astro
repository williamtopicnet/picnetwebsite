---
import { data as featureData } from '@data/business-it-support/features.json';
import { data as informationData, subData as subSection } from '@data/business-it-support/information.json';
import { data as caseStudiesData } from '@data/business-it-support/case-studies.json';

import ServicesHero from '@components/common/ServicesHero.astro';
import FeatureSection from '@components/feature-section/FeatureSection.astro';
import InfoSection from '@components/info-section/InfoSection.astro';
import ServiceCaseStudySection from '@components/common/ServiceCaseStudySection.astro';

import Layout from '@layouts/Layout.astro';
---

<script>
  import { initTab } from '@scripts/tab';

  document.addEventListener('DOMContentLoaded', () => {
    if (typeof initTab === 'function') {
      initTab('case-studies');
    }
  });
</script>

<Layout title="PicNet - IT Support and Help Desk Services">
  <ServicesHero
    title="IT Support Services for businesses"
    subtitle="IT Support for Australian businesses. No offshoring. Local IT talent for local businesses."
    heroImage="/images/hero/business-it-support.webp"
    ctaText="Contact Us Today"
    ctaUrl="/business-it-support/#contact"
  />

  <FeatureSection
    title="Have you found that not all IT Business Support are created equal?"
    subtitle="PUTTING CUSTOMERS FIRST MEANS YOU NEED THE BEST SUPPORT"
    data={featureData}
  />

  <InfoSection
    title="Support that allows you to do what you do best"
    subtitle="RESPONSIVE, KNOWLEDGEABLE, PERSONABLE"
    image="/images/home/about-us.png"
    data={informationData}
    ctaButton={{
      href: '/services-it-hardware-and-software-licensing/',
      text: 'Need Licensing?',
    }}
    subSection={subSection}
  />

  <ServiceCaseStudySection
    title="Some of our Case Studies"
    subtitle="READ ABOUT SOME OF THE COMPANIES THAT HAVE BENEFITED FROM OUR SERVICES"
    data={caseStudiesData}
    id="case-studies"
  />
</Layout>
